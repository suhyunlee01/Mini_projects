<body>
    <button id="cloaking"><img src="img/cloaking.png"/></button>
    <div id="wraith"><img src="img/wraith.png"/></div>
    <script>
        var show = true;
        $('#cloaking').click(function(){
            if(show){
                $('#wraith').hide()
                show = false;
            }
            else{
                $('#wraith').show()
                show = true;
            }
        }
        )
    </script>
</body>
